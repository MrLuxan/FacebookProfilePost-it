{

  "manifest_version": 2,
  "name": "Facebook Profile Post-it",
  "description": "Add a note to a person's profile page - By Robert-Walker.com",
  "version": "2.1",

  "applications": {
    "gecko": {
      "id": "email@Robert-Walker.com"
    }
  },
  "icons": {
    "512": "/images/512.png",
    "128": "/images/128.png"
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["indexedbInterface.js", "contentscript.js"]
    }
  ]

}
